<%= search_form_for @q, url: users_path, method: :get, class: "mb-4" do |f| %>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label>Nome</label>
      <%= f.text_field :name_cont, class: "form-control", placeholder: "Nome" %>
    </div>
    <div class="form-group col-md-6">
      <label>Usuário</label>
      <%= f.text_field :github_username_cont, class: "form-control", placeholder: "Usuário" %>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label>Organização</label>
      <%= f.text_field :organization_cont, class: "form-control", placeholder: "Organização" %>
    </div>
    <div class="form-group col-md-6">
      <label>Localização</label>
      <%= f.text_field :location_cont, class: "form-control", placeholder: "Localização" %>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Entrar</button>
<% end %>
